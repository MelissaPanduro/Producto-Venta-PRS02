CREATE DATABASE PRODUCTOS;

CREATE TABLE PRODUCTOS (
    id_producto SERIAL PRIMARY KEY,               -- Identificador único generado automáticamente
    nombre VARCHAR(100),                          -- Nombre del producto
    descripcion TEXT,                             -- Descripción adicional
    unidad_medida VARCHAR(50),                    -- Unidad de medida
    precio_unitario DECIMAL(10, 2),               -- Precio por unidad de medida
    categoria VARCHAR(50),                        -- Clasificación del producto
    fecha_creacion TIMESTAMP DEFAULT CURRENT_TIMESTAMP, -- Fecha de creación
    estado VARCHAR(10) CHECK (Estado IN ('activo', 'inactivo')) -- Estado del producto
);


INSERT INTO PRODUCTOS (Nombre, Descripción, Unidad_Medida, Precio_Unitario, Categoría, Fecha_Creación, Estado)
VALUES 
